  SONAR_EVENT_TIMER,
  SONAR_EVENT_ERROR,
  SONAR_EVENT_ECHO,
  SONAR_EVENT_CHECK
} SONAR_UPDATE_EVENT;

#endif /* INC_SONAR_H_ */
