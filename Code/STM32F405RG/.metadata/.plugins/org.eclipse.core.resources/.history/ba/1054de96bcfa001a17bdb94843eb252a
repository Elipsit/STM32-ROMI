#ifndef INC_SONAR_H_
#define INC_SONAR_H_

#define NUM_SONARS 3

typedef enum SONAR_ID_t {
  SONAR_1 =1,
  SONAR_2 =2,
  SONAR_3 =3

} SONAR_ID;

// event flag to pass to updateSonars method
