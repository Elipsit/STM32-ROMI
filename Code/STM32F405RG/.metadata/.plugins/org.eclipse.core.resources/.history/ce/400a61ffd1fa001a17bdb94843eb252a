#include "sonar.h"
#include "main.h"

void updateSonar(SONAR_STATUS *sonar){
	HAL_GPIO_WritePin(sonar->trig_port,sonar->trig_pin,RESET);
	HAL_GPIO_WritePin(sonar->trig_port,sonar->trig_pin,SET);

}

void uSec_Delay(uint32_t uSec)
{
	if(uSec < 2)uSec = 2;
	uSTIM->ARR = uSec - 1; 	//Sets the value in the auto reload register
	uSTIM -> EGR = 1;		//Re-initialize the Timer
	uSTIM -> SR &= ~1;  	//Resets the flag
	uSTIM ->CR1 |= 1;		//Enables the counter
	while((uSTIM -> SR&0x0001) != 1);
	uSTIM -> SR &= ~(0x0001);

}
